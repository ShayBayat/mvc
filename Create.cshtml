@model MyMvcProject.ViewModels.PersonCreateViewModel

@{
    ViewData["Title"] = "Create"; // Set the title of the page
}

<h2>Create.</h2>

<!-- Form to create a new person -->
<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="City"></label>
        <input asp-for="City" />
        <span asp-validation-for="City"></span>
    </div>
    <button type="submit">Create</button>
</form>

<!-- Link to go back to the list of people -->
<a href="@Url.Action("Index", "People")">Back to List</a>
